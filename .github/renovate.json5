{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    'schedule:weekends',
  ],
  flux: {
    managerFilePatterns: [
      '/(?:^|/)helm-release\\.ya?ml$/',
      '/(?:^|/)kustomization\\.ya?ml$/',
      '/(?:^|/)(?:helm|git|oci)-repository\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/(?:^|/)helm-release\\.ya?ml$/',
      '/(^|/).+\\.values\\.ya?ml$/',
    ],
  },
  'pre-commit': {
    enabled: true,
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Update versions in yaml files marked by comment',
      managerFilePatterns: [
        '/(?:^|/)talconfig\\.ya?ml$/',
        '/(?:^|/)docker-publish\\.ya?ml$/',
        '/(?:^|/)helm-release\\.ya?ml$/',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s+[\\w-]+: (?<currentValue>.+?)(?:\\s|$)',
      ],
    },
    {
      customType: 'regex',
      description: 'Update versions in Dockerfile ARG statements marked by comment',
      managerFilePatterns: [
        '/(?:^|/)Dockerfile$/',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\sARG [\\w_]+=(?<currentValue>.+?)(?:\\s|$)',
      ],
    },
  ],
  assignees: [
    'Joker9944',
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      dependencyDashboardApproval: true,
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
      ignoreTests: true,
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchDepNames: [
        'talos',
        'kubelet',
      ],
      automerge: false,
      dependencyDashboardApproval: true,
    },
    {
      matchDatasources: [
        'helm-values',
      ],
      matchDepNames: [
        'ghcr.io/joker9944/postgresql-client',
        'ghcr.io/joker9944/jinja-cli',
      ],
      automerge: true,
      ignoreTests: true,
      schedule: [
        'at any time',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchDepNames: [
        'ghcr.io/qdm12/gluetun',
      ],
      enabled: false,
    },
  ],
}
