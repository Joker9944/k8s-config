{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "flux": {
    "fileMatch": [
      "(?:^|/)helm-release\\.ya?ml$",
      "(?:^|/)kustomization\\.ya?ml$",
      "(?:^|/)(?:helm|git|oci)-repository\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(?:^|/)helm-release\\.ya?ml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Talos and Kubernetes versions in talconfig",
      "fileMatch": [
        "(?:^|/)talconfig\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:talos|kubernetes)Version: (?<currentValue>.+?)(?:\\s|$)"
      ]
    }
  ],
  "schedule": [
    "every weekend"
  ],
  "assignees": [
    "Joker9944"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchDatasources": ["helm"],
      "matchDepNames": ["nvidia-device-plugin"],
      "allowedVersions": "<=0.13.0"
    },
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["talos", "kubelet"],
      "automerge": false
    }
  ]
}
