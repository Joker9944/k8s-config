{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "flux": {
    "fileMatch": [
      "(?:^|/)helm-release\\.ya?ml$",
      "(?:^|/)kustomization\\.ya?ml$",
      "(?:^|/)helm-repository\\.ya?ml$",
      "(?:^|/)git-repository\\.ya?ml$",
      "(?:^|/)oci-repository\\.ya?ml$"
    ]
  },
  "assignees": [
    "Joker9944"
  ],
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  }
}
